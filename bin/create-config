#!/usr/bin/env node
// Ghost Configuration for Heroku

var fs = require("fs");
var path = require("path");
var url = require("url");

var appRoot = path.join(__dirname, "..");

function createConfig() {
  var fileStorage,
    storage = {},
    databaseConfig;
  if (!!process.env.CLOUDINARY_URL) {
    fileStorage = true;
    storage = {
      active: "ghost-cloudinary-store",
    };
  }
  if (!!process.env.MYSQL_HOST) {
    databaseConfig = {
      client: "mysql",
      connection: {
        host: process.env.MYSQL_HOST,
        port: 3306,
        user: process.env.MYSQL_USER,
        password: process.env.MYSQL_PASSWORD,
        database: process.env.MYSQL_DB,
        charset: "utf8",
      },
    };
  } else {
    databaseConfig = {
      client: "sqlite3",
      connection: {
        filename: "content/data/ghost-database.db",
      },
      useNullAsDefault: true,
      debug: false,
    };
  }

  config = {
    url: process.env.PUBLIC_URL,
    logging: {
      level: "info",
      transports: ["stdout"],
    },
    mail: {
      from: process.env.SMTP_USER,
      transport: "SMTP",
      options: {
        service: "Sendmail",
        host: process.env.SMTP_HOST,
        port: 465,
        secureConnection: true,
        auth: {
          user: process.env.SMTP_USER,
          pass: process.env.SMTP_PASSWORD,
        },
      },
    },
    fileStorage: fileStorage,
    storage: storage,
    database: databaseConfig,
    server: {
      host: "0.0.0.0",
      port: process.env.PORT,
    },
    paths: {
      contentPath: path.join(appRoot, "/content/"),
    },
  };

  return config;
}

var configContents = JSON.stringify(createConfig(), null, 2);
fs.writeFileSync(path.join(appRoot, "config.production.json"), configContents);
